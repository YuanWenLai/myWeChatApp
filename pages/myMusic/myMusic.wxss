.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/*热门歌单样式*/
.hot_list_title{
  font-weight: 700;
  padding-left: 20rpx;
  margin-bottom: 16rpx;
}
.list_container{
  display: inline-flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  text-align: center;
}


.recommend-container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 24rpx;
}

.music{
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  flex-wrap: nowrap;
  box-sizing: border-box;
  padding: 0rpx 32rpx;
  margin: 10rpx 0 20rpx 0;
}

.music image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
}

.music .icon image{
  width: 40rpx;
  height: 40rpx;
}

.image-title{
  display: inline-flex;
  flex-direction: row;
  align-items: center;
}

.music-title{
  margin-left: 20rpx;
  font-size: 30rpx;
  font-weight: 500;
}
.music-content{
  font-size: 24rpx;
  font-weight: 300;
  margin-top: 10rpx;
}

.music-content image{
  width: 60rpx;
  height: 30rpx;
  border-radius: 0;
  position: relative;
  top: 8rpx;
}



