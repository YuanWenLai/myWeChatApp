.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: rgba(242, 242, 242, 0.81);
}
/*背景大图*/
.bg-image{
  width: 100%;
  height: 450rpx;
  overflow: hidden;
}
.bg-image image{
  width: 100%;
  height: 100%;
}
/*介绍区图文*/
.image-content{
  width: 100%;
  height: 450rpx;
  position: absolute;
  top: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  background-color: rgba(0, 0, 0, 0.45);
  color: #f0ffff;
  z-index: 999;
}
.introduce{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 60rpx;
  box-sizing: border-box;
}
.image-content image{
  width: 220rpx;
  height: 220rpx;
  border-radius: 20rpx;
}

.introduce-content{
  width: 350rpx;
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.93);
}
.user{
  color: rgba(242, 243, 243, 0.88);
  padding-top: 20rpx;
}
.user image{
  height: 32rpx;
  width: 32rpx;
  padding-right: 6rpx;
}

/*点赞分享区样式*/
.love-share{
  width: 640rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  position: relative;
  top: -20rpx;
  left: 55rpx;
  z-index: 9999;
  background-color: #ffffff;
  box-shadow: 2px 2px 3px rgba(46, 46, 46, 0.58);
  border-radius: 12rpx;
 }
.avatar {
  height: 68rpx;
  width: 66rpx;
  position: relative;
  top: 16rpx;
}

.music-list-container{
  margin-bottom: 100rpx;
}