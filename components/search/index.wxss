.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}

/*搜索樣式*/
.header{
  width: 100%;
  position: fixed;
  top: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px solid #ebecec;
  border-top: 1px solid #ebecec;
  padding: 16rpx;
  z-index: 999;
  background-color: #fff;
  opacity: 0.85;
}

.search-container{
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  margin-left: 16rpx;
}

.search-img {
  width: 28rpx;
  height: 28rpx;
  margin: 0 20rpx;
}
.clean{
  width: 28rpx;
  height: 28rpx;
  padding: 16rpx 28rpx;
}

.post{
  width: 466rpx;
  height: 70rpx;
}

.cancle{
  line-height: 68rpx;
  width: 114rpx;
  font-size: 32rpx;
  text-align: center;
  display: inline-block;
  border: none;
  color: #c2c2c2;
}

/*历史热门搜索样式*/
.tips-container{
  width: 100%;
  padding: 0 20rpx ;
  color: #9d9d9d;
  margin-top: 120rpx;
}
.history{
  width: 690rpx;
  display: flex;
  font-size: 28rpx;
  flex-direction: column;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.title {
  line-height: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.chunk {
  height: 30rpx;
  width: 10rpx;
  background-color: #000;
  display: inline-block;
  margin-right: 20rpx;
}
.tap-container{
  display: inline-flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  font-size: 28rpx;
  margin-top: 20rpx;
}
.tap-container view{
  margin-right:30rpx;
  padding-top: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 2px;
  color: #666;
  background-color: #f5f5f5;
  margin-bottom: 18rpx;
}

/*搜索后的书籍样式*/
.book-container{
  margin-top: 130rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 90rpx;
}

.book-container v-book{
  margin-bottom: 16rpx;
}

.empty-tip{
  width: 100%;
  position: absolute;
  top: 50%;
  left: 37%;
  color: #585858;
}


/*加载提示样式*/
.loadingCenter{
  position: absolute;
  top: 50%;
  left: 47%;
}

.loadingBottom{
  margin: 50rpx 0 50rpx 0;
}
