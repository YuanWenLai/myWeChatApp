.container{
  width: 240rpx;
  height: 360rpx;
  display: flex;
  flex-direction: column;
  position: relative;
  margin-top: 30rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}
.container image{
  width: 100%;
  height: 100%;
  border-radius: 4rpx;
}

.decription{
  width: 208rpx;
  background-color: #fff;
  padding: 5rpx 10rpx 8rpx 22rpx;
  position: absolute;
  bottom: 0;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  border-bottom-right-radius: 2px;
  border-bottom-left-radius: 2px;
}

.title{
  margin-top: 10rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.author {
  font-size: 20rpx;
  color: #999999;
  margin-bottom: 10rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.foot{
  font-size: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.footer{
  color: #666;
}